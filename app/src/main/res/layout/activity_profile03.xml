<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEBD7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Animal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#D3D3D3"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"/>

            <EditText
                android:id="@+id/etProfile03Nama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Jenis Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#D3D3D3"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesies :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"/>

            <EditText
                android:id="@+id/etProfil03Spesies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Umur Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#D3D3D3"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"/>

            <EditText
                android:id="@+id/etProfile03Jenis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- WA Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#D3D3D3"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"/>

            <EditText
                android:id="@+id/etProfil03Umur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#D3D3D3"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"/>

            <EditText
                android:id="@+id/etPofil03Bio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:padding="8dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnProfile03Kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kirim"
            android:layout_gravity="end"
            android:background="#D3D3D3"
            android:padding="8dp" />


    </LinearLayout>
</ScrollView>
